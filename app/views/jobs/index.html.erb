<div class="col-md-12">
  <div class="job">
    <%= link_to("添加职位",new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>职位名称</td>
        <td>操作按钮</td>
        <td>发布时间</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td>
            <%= link_to("编辑", edit_job_path(job)) %> |
            <%= link_to("删除", job_path(job), method: :delete, data: { confirm: "确定要删除吗？" }) %>
          </td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
